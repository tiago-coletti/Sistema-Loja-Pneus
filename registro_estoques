<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controle de Estoque</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>Controle de Estoque</h1>
        
        <div class="form-section">
            <h2>Adicionar Produto</h2>
            
            <label for="tipoProduto">Tipo do Produto</label>
            <input type="text" id="tipoProduto" placeholder="Pneu" required> <br>

            <label for="quantidade">Quantidade</label>
            <input type="number" id="quantidade" placeholder="2" required min="0"><br>

            <label for="marca">Marca</label>
            <input type="text" id="marca" placeholder="Firestone" required><br>

            <label for="modelo">Modelo</label>
            <input type="text" id="modelo" placeholder="Pneus off-road" required><br>

            <label for="codigoProduto">Código do Produto</label>
            <input type="text" id="codigoProduto" placeholder="123" required><br>

            <label for="medida">Medida/Tamanho</label>
            <input type="text" id="medida" placeholder="Pneu Aro 13" required><br>

            <label for="dataCadastro">Data de Cadastro</label>
            <input type="date" id="dataCadastro" required><br>

            <label for="valor">Valor</label>
            <input type="text" id="valor" placeholder="R$ 310,00" required><br><br>
            
            <button type="button" onclick="adicionarProduto()">Adicionar Produto</button>
        </div>
        <br>

        <div class="list-section">
            <h2>Lista de Produtos</h2>
            <button onclick="listarProdutos()">Mostrar Produtos</button>
            <div id="listaProdutos"></div>
        </div>
    </div>

    <script>
        function adicionarProduto() {
            const tipoProduto = document.getElementById('tipoProduto').value;
            const quantidade = document.getElementById('quantidade').value;
            const marca = document.getElementById('marca').value;
            const modelo = document.getElementById('modelo').value;
            const codigoProduto = document.getElementById('codigoProduto').value;
            const medida = document.getElementById('medida').value;
            const dataCadastro = document.getElementById('dataCadastro').value;
            const valor = document.getElementById('valor').value;
            
            if (!tipoProduto || !quantidade || !marca || !modelo || !codigoProduto || !medida || !dataCadastro || !valor) {
                alert("Por favor, preencha todos os campos obrigatórios.");
                return;
            }

            alert("Produto adicionado com sucesso!");
            
            document.getElementById('tipoProduto').value = '';
            document.getElementById('quantidade').value = '';
            document.getElementById('marca').value = '';
            document.getElementById('modelo').value = '';
            document.getElementById('codigoProduto').value = '';
            document.getElementById('medida').value = '';
            document.getElementById('dataCadastro').value = '';
            document.getElementById('valor').value = '';
        }

        function listarProdutos() {
            alert("Lista de produtos será mostrada aqui.");
        }
    </script>
</body>
</html>
